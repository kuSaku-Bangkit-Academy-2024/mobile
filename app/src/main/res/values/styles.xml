<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base -->
    <style name="TextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <!-- Header -->
    <style name="Header" parent="TextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HeaderLoginRegister" parent="TextStyle">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- SubHeader -->
    <style name="SubHeader" parent="TextStyle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SubSubHeader" parent="TextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Title and Subtitle -->
    <style name="TitleText" parent="TextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SubTitleText" parent="TextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Small Text -->
    <style name="SmallText" parent="TextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/teal_700</item>
        <item name="boxBackgroundMode">filled</item>
    </style>
</resources>